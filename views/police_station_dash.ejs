    <div class="table-responsive">
      <table id="example" class="table table-striped" style="width:100%">
        <thead>
          
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Catogory</th>
            <th scope="col"> Other Catogory </th>
            <th scope="col">Email</th>
            <th scope="col">Occupation</th>
            <th scope="col"> Unique no</th>
            <th scope="col">Age</th>
            <th scope="col">Criminal Images</th>
            <th>more details</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0;i<newitem.length;i++){ %>
          <tr>
            <td><%= newitem[i].Name %></td>
            <td><%= newitem[i].Category %></td>
            <td><%= newitem[i].more %></td>
            <td><%= newitem[i].Email %></td>
            <td><%= newitem[i].Occupation %></td>
            <td><%= newitem[i].fir_no %></td>
            <td><%= newitem[i].Age %></td>
            <td>  <img class="image" src="/uploads/<%=newitem[i].foo[0].filename%>" alt="image"> </td>
            <td><a class="er" href="/police/Dash/<%=newitem[i].fir_no%>">view more</a></td>
          </tr>
       <% } %>
        </tbody>
      </table>
    </div>

